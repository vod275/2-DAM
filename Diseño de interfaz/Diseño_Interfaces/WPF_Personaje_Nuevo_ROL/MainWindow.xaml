<Window x:Class="WPF_Personaje_Nuevo_ROL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Personaje_Nuevo_ROL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Creación de Personajes">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nombre del Personaje -->
                    <TextBlock Text="Nombre del Personaje:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBox Name="txtNombrePersonaje" Width="200" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

                    <!-- Clase del Personaje -->
                    <TextBlock Text="Clase:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                    <ComboBox Name="cbClasePersonaje" Width="200" Grid.Row="1" Grid.Column="1" Margin="0,5">
                        <ComboBoxItem Content="Guerrero"/>
                        <ComboBoxItem Content="Mago"/>
                        <ComboBoxItem Content="Arquero"/>
                        <ComboBoxItem Content="Picaro"/>
                        <ComboBoxItem Content="Paladin"/>
                        <ComboBoxItem Content="Druida"/>
                        <ComboBoxItem Content="Hechicero"/>
                    </ComboBox>

                    <!-- Género del Personaje -->
                    <TextBlock Text="Género:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0"/>
                    <StackPanel x:Name="Genero" Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,5">
                        <RadioButton x:Name="GeneroMasculino" Content="Masculino" GroupName="Genero" Margin="0,0,10,0"/>
                        <RadioButton x:Name="GeneroFemenino" Content="Femenino" GroupName="Genero"/>
                    </StackPanel>

                    <!-- Título Atributos -->
                    <TextBlock Text="Atributos:" FontWeight="Bold" FontSize="16" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,5"/>

                    <!-- Atributos con Sliders -->
                    <TextBlock Text="Fuerza" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                    <Slider Name="sldFuerza" Minimum="1" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True" Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Inteligencia" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                    <Slider Name="sldInteligencia" Minimum="1" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True" Grid.Row="5" Grid.Column="1"/>

                    <TextBlock Text="Destreza" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
                    <Slider Name="sldDestreza" Minimum="1" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True" Grid.Row="6" Grid.Column="1"/>

                    <TextBlock Text="Resistencia" Grid.Row="7" Grid.Column="0" Margin="0,5"/>
                    <Slider Name="sldResistencia" Minimum="1" Maximum="100" Width="200" TickFrequency="10" IsSnapToTickEnabled="True" Grid.Row="7" Grid.Column="1"/>

                    <!-- Foto del Personaje -->
                    <TextBlock Text="Foto del Personaje:" FontWeight="Bold" Grid.Row="8" Grid.Column="0" Margin="0,10,10,0"/>


                    <!-- Botón Crear Personaje -->
                    <Button Content="Crear Personaje" Width="100" Grid.Row="9" Margin="0,90,0,70" Click="CrearPersonaje_Click" HorizontalAlignment="Center" Grid.Column="1"/>
                    <TextBox x:Name="RutaFoto" HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="8" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="200" Grid.RowSpan="2" Height="18" Grid.Column="1"/>
                </Grid>
            </TabItem>


            <!-- Tab para Lista y Detalles de Personaje -->
            <TabItem Header="Lista y Detalles de Personaje">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ListBox de Personajes -->
                    <DataGrid x:Name="dgPersona" ItemsSource="{Binding Path=lista}" 
                               AutoGenerateColumns="False" SelectionChanged="dgPersona_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding NombrePersonaje}"/>
                            <DataGridTextColumn Header="Clase" Binding="{Binding Clase}"/>
                            <DataGridTextColumn Header="Genero" Binding="{Binding Genero}"/>
                            <DataGridTextColumn Header="Fuerza" Binding="{Binding Fuerza}"/>
                            <DataGridTextColumn Header="Inteligencia" Binding="{Binding Inteligencia}"/>
                            <DataGridTextColumn Header="Destreza" Binding="{Binding Destreza}"/>
                            <DataGridTextColumn Header="Resistencia" Binding="{Binding Resistencia}"/>
                            <DataGridTextColumn Header="Foto" Binding="{Binding Foto}"/>
                        </DataGrid.Columns>
                    </DataGrid>


                    <!-- Detalles del Personaje -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Detalles del Personaje" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="Nombre:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedPersonaje.NombrePersonaje}" Margin="0,5,0,10"/>

                        <TextBlock Text="Clase:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedPersonaje.Clase}" Margin="0,5,0,10"/>

                        <TextBlock Text="Foto:" FontWeight="Bold"/>
                        <Image Height="197" Width="215" Source="{Binding SelectedPersonaje.Foto}" />
                    </StackPanel>

                </Grid>
            </TabItem>

            <!-- Tab para Inventario -->
            <TabItem Header="Inventario">
                <StackPanel Margin="10">
                    <TextBlock Text="Inventario" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <ListBox Name="lbObjetosInventario" Width="300" Height="200">
                        
                    </ListBox>

                    <TextBlock Text="Objeto Seleccionado:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Name="tbObjetoSeleccionado" Margin="0,5"/>

                    <Button Content="Equipar" Width="100" Margin="0,10,0,0"/>
                    <Button Content="Desequipar" Width="100" Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
