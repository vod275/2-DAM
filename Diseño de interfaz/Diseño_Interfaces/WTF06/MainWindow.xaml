<Window x:Class="WTF06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTF06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton x:Name="rbCirculo" Content="Circulo" HorizontalAlignment="Left" Margin="179,197,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbCuadrado" Content="Cuadrado" HorizontalAlignment="Left" Margin="386,193,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbTrIangulo" Content="Triangulo" HorizontalAlignment="Left" Margin="587,193,0,0" VerticalAlignment="Top"/>
        <Image Margin="158,31,516,282" Source="/circulo.png" Stretch="Fill"/>
        <Image Margin="345,12,289,263" Source="/cuadrado.jpg" Stretch="Fill" RenderTransformOrigin="-0.755,-0.872"/>
        <Image Margin="550,22,92,273" Source="/triangulo.jpg" Stretch="Fill"/>
        <TextBox x:Name="tbResultado" HorizontalAlignment="Left" Margin="587,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="35"/>
        <Button x:Name="btCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="345,302,0,0" VerticalAlignment="Top" Height="35" Width="205"/>

    </Grid>
</Window>
