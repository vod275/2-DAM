<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:text="@string/nombre"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ptNombre"
        app:layout_constraintEnd_toStartOf="@+id/ptNombre"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ptNombre"
        android:layout_width="188dp"
        android:layout_height="0dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="19dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:text="@string/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNombre"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btAceptar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/aceptar"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="225dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btBorrar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="225dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>